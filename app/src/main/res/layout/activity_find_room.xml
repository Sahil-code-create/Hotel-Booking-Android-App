<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context=".FindRoomActivity">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavBar"
        android:padding="16dp"
        android:clipToPadding="false"
        android:paddingBottom="90dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Room"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:textColor="#333"
                    android:drawableStart="@android:drawable/ic_menu_revert"
                    android:drawablePadding="4dp" />
            </RelativeLayout>

            <!-- Dropdown: City Selection -->
            <AutoCompleteTextView
                android:id="@+id/dropdownCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Where you want to go?"
                android:textColor="#333"
                android:textColorHint="#666"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:inputType="none"
                android:focusable="false"
                android:layout_marginBottom="12dp" />

            <!-- Check-in Date -->
            <TextView
                android:id="@+id/tvCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Check-in Date"
                android:padding="12dp"
                android:textColor="#333"
                android:textColorHint="#666"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_today"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Check-out Date -->
            <TextView
                android:id="@+id/tvCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Check-out Date"
                android:padding="12dp"
                android:textColor="#333"
                android:textColorHint="#666"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_today"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Number of Rooms -->
            <EditText
                android:id="@+id/etRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Rooms"
                android:textColorHint="#666"
                android:inputType="number"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:textColor="#333"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Search Button -->
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEARCH"
                android:textAllCaps="true"
                android:padding="12dp"
                android:backgroundTint="#007BFF"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp" />

            <!-- Best Places -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST PLACES"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/viewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW ALL"
                    android:textColor="#007BFF"
                    android:textStyle="bold"
                    android:layout_marginStart="210dp"/>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutPlaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:elevation="8dp"
        android:paddingBottom="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="3dp"
                android:src="@drawable/baseline_home_24"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Where2Go -->
        <LinearLayout
            android:id="@+id/navWhere2Go"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="3dp"
                android:src="@drawable/outline_location_on_24"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where2Go"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
